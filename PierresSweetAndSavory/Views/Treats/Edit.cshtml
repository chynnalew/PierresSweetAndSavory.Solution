@{
  Layout = "_Layout";
}

@model PierresSweetAndSavory.Models.Treat;

<h1>Edit @Model.TreatName</h1>

<div class="card">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    @Html.LabelFor(model => model.TreatName)
    <br>
    @Html.EditorFor(model => model.TreatName)
    <br><br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.EditorFor(model => model.Description)
    <br><br>
    <input type="submit" value="Save" class="btn btn-outline-warning"/>
  }
</div>

<p>@Html.ActionLink("Return to Treat List", "Index")</p>