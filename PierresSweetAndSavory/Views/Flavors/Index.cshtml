@{
  Layout = "_Layout";
}

@using PierresSweetAndSavory.Models;
@model List<PierresSweetAndSavory.Models.Flavor>;

<h1>All Flavors!</h1>
@if(@Model.Count == 0)
{
  <br>
  <p>No Flavors Availible</p>
}
else
{
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        @foreach(var flavor in Model)
        {
        <tr>
            <td>@Html.ActionLink($"{flavor.FlavorName}", "Details", "Flavor", new{id = flavor.FlavorId})</td>
        </tr>
        }
      </tbody>
    </table>
  </div>
}
<br>
<h4 class="h4">@Html.ActionLink("Add a Flavor", "Create", "Flavors")</h4>
<br>
<h4 class="h4">@Html.ActionLink("Return Home", "Index", "Home")</h4>