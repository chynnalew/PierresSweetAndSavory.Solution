@{
  Layout = "_Layout";
}

@using PierresSweetAndSavory.Models;
@model List<PierresSweetAndSavory.Models.Treat>;

<h1>Welcome to Pierres!</h1>
@if(@Model.Count == 0)
{
  <br>
  <p>No Treats Availible</p>
}
else
{
  <div class="row">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
            <th>Today's Treats</th>
        </tr>
      </thead>
      <tbody>
        @foreach(var treat in Model)
        {
        <tr>
            <td>@Html.ActionLink($"{treat.TreatName}", "Details", "Treats", new{id = treat.TreatId})</td>
        </tr>
        }
      </tbody>
    </table>
  </div>
}
<br>
<h4 class="h4">@Html.ActionLink("View All Treats", "Index", "Treats")</h4>
<br>
<h4 class="h4">@Html.ActionLink("View All Flavors", "Index", "Flavors")</h4>