@{
  Layout = "_Layout";
}

@using PierresSweetAndSavory.ViewModels
@model LoginViewModel

<h2>Login with your Account</h2>
<hr />
<h4 style="color:red">@ViewBag.ErrorMessage</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(m => m.Email)
  @Html.TextBoxFor(m => m.Email , new{@class = "form-control", required = "required"})
  <br>
  @Html.LabelFor(m => m.Password)
  @Html.PasswordFor(m => m.Password, new{@class = "form-control", required = "required"})
  <br>
  <input type="submit" value="Log in" class="btn btn-outline-warning" />
}